#include <iostream>
using namespace std;
int NOD (int a, int b)
{
    while (a != b)
    {
        if (a > b)
            a -= b;
        else
            b -= a;
    }
    return a;
}
 
int NOK (int a, int b)
{
    return a * b / NOD (a, b);
}
 
int main ()
{
    int a = 14;
    int b = 28;
 
    cout << "Наибольший общий делитель =>" << NOD (a, b) << " " << "Наименьшее общее кратное =>"  << NOK (a, b) << endl;
    return 0;
}
